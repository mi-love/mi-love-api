generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum gender {
  male
  female
  other
}

enum auth_provider {
  local
  google
  apple
}

model user {
  id            String    @id @default(cuid())
  email         String    @unique
  first_name    String
  last_name     String
  password      String?
  phone_number  String?
  country       String?
  gender        gender?
  date_of_birth DateTime?

  auth_provider auth_provider @default(local)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}
