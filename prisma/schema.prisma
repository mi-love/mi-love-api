generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum gender {
  male
  female
  other
}

enum auth_provider {
  local
  google
  apple
}

enum post_visibility {
  public
  friends
}

enum file_provider {
  local
  cloudinary
}

enum file_type {
  image
  video
  document
}

enum transaction_type {
  credit
  debit
}

enum status_type {
  success
  failed
  pending
}

enum currency {
  USD
}

enum message_type {
  text
  file
  announcement
}

enum notification_type {
  message
  security
  system
  social
}

model blocked_users {
  id String @id @default(cuid())

  user         user?   @relation("user", fields: [userId], references: [id])
  blocked_user user?   @relation("blocked_user", fields: [blockedUserId], references: [id])
  reason       String?

  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  userId        String?
  blockedUserId String?
}

model user {
  id                String     @id @default(cuid())
  email             String     @unique
  first_name        String
  last_name         String
  username          String     @unique
  password          String?
  emergency_contact String?
  bio               String?
  profile_picture   file?      @relation(fields: [fileId], references: [id])
  home_address      String?
  interests         interest[]
  phone_number      String?
  country           String?
  gender            gender?
  date_of_birth     DateTime?

  fcm_token String? @db.Text

  comments comment[] @relation("comment_user")

  auth_provider auth_provider @default(local)

  my_friends user[] @relation("friends")
  friends    user[] @relation("friends")

  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt
  posts          post[]          @relation("post_user")
  likes          post[]          @relation("post_likes")
  status         status[]
  reaction       reaction[]
  liked_comments comment[]       @relation("liked_comments")
  fileId         String?
  blocked        blocked_users[] @relation("user")
  blocked_users  blocked_users[] @relation("blocked_user")
  wallet         wallet          @relation(fields: [walletId], references: [id])
  walletId       String
  transaction    transaction[]
  participant    participant[]
  message        message[]
  panic_actions  panic_actions[]
  notification   notification[]

  @@map("users")
}

model interest {
  id         String   @id @default(cuid())
  name       String   @unique
  // embeddings Unsupported("vector")?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       user[]

  @@map("interests")
}

model otp {
  id         String   @id @default(cuid())
  email      String
  otp        String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("otps")
}

model post {
  id      String @id @default(cuid())
  // embeddings Unsupported("vector")?
  content String @db.Text

  visibility post_visibility @default(public)
  files      file[]
  likes      user[]          @relation("post_likes")
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt
  comments   comment[]
  userId     String
  user       user            @relation("post_user", fields: [userId], references: [id])

  @@map("posts")
}

model status {
  id       String     @id @default(cuid())
  user     user       @relation(fields: [userId], references: [id])
  content  String?    @db.VarChar()
  file     file[]
  reaction reaction[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  userId     String
}

model comment {
  id      String  @id @default(cuid())
  content String
  likes   user[]  @relation("liked_comments")
  user    user?   @relation("comment_user", fields: [userId], references: [id])
  userId  String?

  post   post?   @relation(fields: [postId], references: [id])
  postId String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("comments")
}

model file {
  id         String        @id @default(cuid())
  url        String
  provider   file_provider @default(local)
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt
  type       file_type

  ref     String?
  post    post?     @relation(fields: [postId], references: [id])
  postId  String?
  status  status[]
  user    user[]
  gift    gift[]
  message message[]

  @@map("files")
}

model reaction {
  id         String   @id @default(cuid())
  emoji      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  userId     String
  user       user     @relation(fields: [userId], references: [id])
  status     status?  @relation(fields: [statusId], references: [id])
  statusId   String?

  @@map("reactions")
}

model wallet {
  id         String   @id @default(cuid())
  balance    Decimal  @default(0) @db.Decimal(10, 2)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       user[]

  @@map("wallets")
}

model transaction {
  id           String           @id @default(cuid())
  amount       Float
  fee          Float?           @default(0)
  type         transaction_type
  description  String?
  status       status_type      @default(pending)
  currency     currency
  payment_link String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  userId     String
  user       user     @relation(fields: [userId], references: [id])

  @@map("transactions")
}

model gift_category {
  id          String  @id @default(cuid())
  name        String  @unique
  description String? @db.Text

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  gift       gift[]

  @@map("gift_category")
}

model gift {
  id          String        @id @default(cuid())
  points      Decimal       @db.Decimal(10, 2)
  category    gift_category @relation(fields: [gift_category_id], references: [id])
  name        String?
  description String?       @db.Text

  image   file?   @relation(fields: [imageId], references: [id])
  imageId String?

  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  gift_category_id String

  @@map("gifts")
}

model chat {
  id String @id @default(cuid())

  participants participant[]
  messages     message[]

  can_send_messages Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("chats")
}

model participant {
  id     String @id @default(cuid())
  chat   chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId String

  mute DateTime?

  user   user   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("participants")
}

model message {
  id   String       @id @default(cuid())
  type message_type

  content String? @db.Text
  edited  Boolean @default(false)
  deleted Boolean @default(false)

  file   file?   @relation(fields: [fileId], references: [id])
  fileId String?

  user   user?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  chat       chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId     String

  @@map("messages")
}

model panic_actions {
  id        String  @id @default(cuid())
  latitude  Float
  longitude Float
  location  String?
  user      user    @relation(fields: [userId], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  userId     String
}

model notification {
  id      String            @id @default(cuid())
  title   String
  body    String?
  type    notification_type
  is_read Boolean           @default(false)
  user    user              @relation(fields: [userId], references: [id])
  userId  String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("notifications")
}
