generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum gender {
  male
  female
}

model user {
  id                     String    @id @unique @default(cuid())
  email                  String    @unique
  username               String    @unique
  gender                 gender
  phone_number           String?
  emergency_phone_number String?
  country                String?
  bio                    String?   @db.LongText
  date_of_birth          DateTime? // for accurate data, it should be a valid dateTime even when the time is not required.
  first_name             String?
  last_name              String?

  password password? @relation(fields: [key], references: [id])
  key      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model password {
  id    String @id @unique @default(cuid())
  value String

  user      user[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
